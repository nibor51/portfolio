        </div>
        <div class="element">
            <img src="https://picsum.photos/360/640/" alt="">
        </div>
    </div>
    {# works #}
    <div id="works" class="flex container works">
        {% for work in works %}
            <div class="flex work-container">
                <div class="element">
                    <h2>{{ work.title }}</h2>
                    <p>Du {{ work.startDate ? work.startDate|date('d-m-Y') : '' }} au {{ work.endDate ? work.endDate|date('d-m-Y') : '' }}</p>
                    <p>
                        {{ work.description }}
                    </p>
                    <p>{{ work.link }}</p>
                    <div class="tech-container">
                        <h3>Techs Utilis√©es</h3>
                        {% for tech in work.usedTech %}
                            <img src="{{ tech.logo }}" alt="{{ tech.name }}" width="50px" height="50px">
                        {% endfor %}
                    </div>
                </div>
                <div class="element">
                    {% for image in work.images %}
                        <img src="{{ image.src }}" alt="{{ image.alt }}">
                    {% endfor %}
                </div>
            </div>
        {% else %}
            <div class="flex container">
                <div class="element">
                    <p>
                        no records found
                    </p>
                </div>
            </div>
        {% endfor %}
    </div>
    {# contact #}
    <div id="contact" class="flex container">
        <div class="element">
            <img src="https://picsum.photos/360/640/" alt="">
        </div>
        <div class="element">
            <h1 class="title">Contact</h1>
            {# TODO : ContactForm #}
        </div>
    </div>
{% endblock %}
