{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Works{% endblock %}

{% block body %}
    <h1 class="title">Work</h1>
    {% for work in works %}
        <div class="flex container">
            <div class="element">
                <h2>{{ work.title }}</h2>
                <p>Du {{ work.startDate ? work.startDate|date('Y-m-d') : '' }} au {{ work.endDate ? work.endDate|date('Y-m-d') : '' }}</p>
                <p></p>
                <p>
                    {{ work.description }}
                </p>
                <p>{{ work.link }}</p>
                <h3>Techs Utilis√©es</h3>
                <div class="tech-container">
                {% for tech in work.usedTech %}
                    <img src="{{ tech.logo }}" alt="{{ tech.name }}">
                {% endfor %}
                </div>
            </div>
            <div class="element">
                {% for image in work.images %}
                <img src="{{ image.src }}" alt="{{ image.alt }}">
            {% endfor %}
            </div>
    {% else %}
            <div class="element">
                <p>
                    no records found
                </p>
            </div>
        </div>
    {% endfor %}
{% endblock %}
